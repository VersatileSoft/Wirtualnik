{
  "App": {
    "WwwRoot": true,
    "Storage": true,
    "Swagger": {
      "Enabled": true,
      "Username": "(secret.json)",
      "Password": "(secret.json)"
    },
    "ApiUrl": "",
    "Api": {
      "Public": true,
      "Admin": true,
      "Mobile": true
    }
  },

  "DatabaseEngine": "sqlserver", //mysql

  "ConnectionStrings": {
    "DefaultDatabase": "(secret.json)"
  },
  "Redis": {
    "ConnectionString": "(secret.json)",
    "Prefix": ""
  },
  "Security": {
    "Access-Control-Allow-Origin": [

    ],
    "Strict-Transport-Security": "",
    "Content-Security-Policy": "default-src 'self'; img-src 'self' data: *; connect-src 'self' *; script-src 'self' 'unsafe-inline' 'unsafe-eval' storage.googleapis.com; style-src 'self' 'unsafe-inline'; font-src 'self' fonts.gstatic.com; frame-src https://app.skanuj.to 'self';",
    "Feature-Policy": "",
    "Request-Token": false
  },
  "BackgroundServices": {
    "Scheduler": "hangfire", // hangfire, quartz
    "Events": "hangfire", // hangfire, sync, rabbitmq
    "Queue": "hangfire", // hangfire, sync, rabbitmq, azureservicebus
    "Settings": {
      "Hangfire": {
        "Dashboard": {
          "Path": "/jobs",
          "Username": "(secret.json)",
          "Password": "(secret.json)"
        },
        "Database": {
          "SchemaName": "Scheduler",
          "ConnectionString": "(secret.json)" // tylko SqlServer
        },
        "Redis": {
          "Prefix": "hangfire:",
          "Database": 1
        }
      },
      "Events": {
        "Name": "default",
        "Enabled": true,
        "Workers": 0 // 0 - automatycznie w oparciu o iloœæ procesorów
      },
      "Queues": [
        {
          "Name": "default",
          "Enabled": true,
          "Workers": 0 // 0 - automatycznie w oparciu o iloœæ procesorów
        },
        {
          "Name": "scheduler",
          "Enabled": true,
          "Workers": 0 // 0 - automatycznie w oparciu o iloœæ procesorów
        },
        {
          "Name": "mails",
          "Enabled": true,
          "Workers": 0 // 0 - automatycznie w oparciu o iloœæ procesorów
        },
        {
          "Name": "notifications",
          "Enabled": true,
          "Workers": 0 // 0 - automatycznie w oparciu o iloœæ procesorów
        }
      ]
    }
  },
  "NLog": {
    "Path": "${contentroot}/../.logs",
    "Sentry": {
      "dsn": "(secret.json)"
    },
    "Elasticsearch": {
      "Endpoint": "",
      "Username": "(secret.json)",
      "Password": "(secret.json)"
    },
    "Target": {
      "Error": "errorlogfile,console"
    },
    "Api": {
      "Logging": "false"
    }
  },
  "Tokens": {
    "Issuer": "(secret.json)",
    "Key": "(secret.json)",
    "TrackerKey": "(secret.json)"
  },
  "Mail": {
    "Host": "",
    "Port": 25,
    "Username": "(secret.json)",
    "Password": "(secret.json)",
    "Ssl": false,
    "LogitoDomain": "",
    "From": {
      "Address": "",
      "Name": ""
    }
  },
  "i18n": {
    "Domains": {
      "messages": {
        "Sources": [ ".", "", "" ],
        "LocalePath": "Locales",
        "LocaleName": "messages",
        "WhiteList": [ "*.cs", "*.cshtml" ],
        "BlackList": [ "\\bin", "\\obj", "\\wwwroot" ],
        "Format": "gettext"
      },
      "admin": {
        "Sources": [ "" ],
        "LocalePath": "",
        "LocaleName": "messages",
        "WhiteList": [ "*.ts", "*.js", "*.vue" ],
        "BlackList": [ "\\node_modules", "\\locales" ],
        "Format": "json"
      },
      "public": {
        "Sources": [ "" ],
        "LocalePath": "",
        "LocaleName": "messages",
        "WhiteList": [ "*.ts", "*.js", "*.vue" ],
        "BlackList": [ "\\node_modules", "\\locales" ],
        "Format": "json"
      }
    },
    "DefaultDomain": "messages",
    "AvailableLanguages": [ "pl-PL", "en-US" ],
    "DefaultLanguage": "pl-PL"
  },
  "FileSystem": {
    "BaseUrl": "storage/files",
    "DefaultDisk": "storage",
    "TempDisk": "temp",
    "Disks": {
      "storage": {
        "driver": "local",
        "root": "#{Storage.Path}#\\.storage"
      },
      "temp": {
        "driver": "local",
        "root": "#{Storage.Path}#\\.storage\\temp"
      },
      "thumbs": {
        "driver": "local",
        "root": "#{Storage.Path}#\\.storage\\thumbs"
      }
    }
  },
  "Images": {
    "Cache": {
      "Enabled": false,
      "Disk": "thumbs"
    },
    "Presets": {
      "upload": "width=200;height=150;method=crop;sharp=0.5",
      "ico": "width=36;height=36;method=crop;sharp=0.5",
      "thumb": "width=150;height=150;method=crop;sharp=0.5",
      "avatar": "width=150;height=150;method=crop;gravity=face;sharp=0.5",
      "glance": "width=400;height=400;method=resize;sharp=0.5",
      "preview": "width=1600;height=1200;method=resize;sharp=0.5"
    }
  }
}
