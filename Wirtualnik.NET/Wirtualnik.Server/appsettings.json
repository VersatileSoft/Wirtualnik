{

  "SwaggerSettings": {
    "Enabled": true,
    "Authorized": false,
    "Username": "(secret.json)",
    "Password": "(secret.json)"
  },

  "ConnectionStrings": {
    "DefaultDatabase": "(secret.json)"
  },

  "AuthenticationSettings": {
    "CallbackUrl": "https://localhost:3000",
    "ErrorUrl": "error",
    "FacebookAuthenticationSettings": {
      "AppId": "(secret.json)",
      "AppSecret": "(secret.json)"
    },
    "JwtAuthenticationSettings": {
      "Secret": "(secret.json)"
    },
    "AdminUser": {
      "Email": "(secret.json)",
      "Password": "(secret.json)"
    }
  },

  "HangfireSettings": {
    "Dashboard": {
      "Path": "/jobs",
      "Username": "(secret.json)",
      "Password": "(secret.json)"
    },
    "Database": {
      "InMemory": "false", // when true, ConnectionString not needed
      "SchemaName": "Scheduler",
      "ConnectionString": "(secret.json)"
    }
  },

  "NLogSettings": {
    "Path": "${aspnet-appbasepath}/logs",
    "Sentry": {
      "dsn": "(secret.json)"
    },
    "Target": {
      "Error": "errorlogfile,console,sentry"
    },
    "Api": {
      "Logging": "true"
    }
  }
}
