<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MainTheme" parent="MainTheme.Base">
    <item name="android:forceDarkAllowed">false</item>

    <item name="android:colorEdgeEffect">#ffffff</item>

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="SplashScreenTheme" parent="MainTheme">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:statusBarColor">@color/icon_background</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:navigationBarColor">@color/icon_background</item>
    <item name="android:windowLightNavigationBar">false</item>
  </style>
</resources>